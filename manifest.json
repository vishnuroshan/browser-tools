{
  "manifest_version": 2,
  "name": "browser-tools",
  "description": "personal browser toolkit",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png",
    "16": "icons/logo-16.png",
    "32": "icons/logo-34.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mozilla.org/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "32": "icons/logo-34.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "browser-tools"
  },
  "page_action": {
    "default_icon": {
      "32": "icons/logo-34.png"
    },
    "default_popup": "pageAction/index.html",
    "default_title": "browser-tools"
  },
  "options_ui": {
    "page": "options/index.html"
  },
  "permissions": ["activeTab", "tabs"]
}